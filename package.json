{
  "name": "konquest-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd ./client/ && npm run start",
    "server": "PORT=3001 nodemon server/app.js --exec babel-node --ignore ./client",
    "build": "npm run build-client && npm run build-server",
    "build-client": "rm -Rf ./client_dist/ && cd ./client && npm run build && cd ../ && mv ./client/build/ ./client_dist",
    "build-server": "babel server -d dist",
    "serve": "node dist/app.js",
    "test": "npm run test-server && npm run test-client",
    "test-client": "cd ./client/ && CI=1 npm test",
    "test-server": "NODE_ENV=test mocha --compilers js:babel-core/register -u exports server/test/**/*"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.18.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "~1.4.3",
    "express": "^4.15.5",
    "express-session": "^1.15.5",
    "mongoose": "^4.11.13",
    "morgan": "^1.8.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.2.1",
    "pretty-error": "^2.1.1",
    "pug": "^2.0.0-rc.4",
    "serve-favicon": "^2.4.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-plugin-typecheck": "^3.6.0",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.0",
    "debug": "^3.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.10.3",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0"
  },
  "engines": {
    "node": "5.6.0"
  }
}
