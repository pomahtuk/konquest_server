{
  "name": "konquest-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd ./client/ && npm run start",
    "server": "PORT=3001 nodemon server/app.js --exec babel-node --ignore ./client",
    "build": "npm run build-client && npm run build-server",
    "build-client": "rm -Rf ./client_dist/ && cd ./client && npm run build && cd ../ && mv ./client/build/ ./client_dist",
    "build-server": "babel server -d dist",
    "serve": "node dist/app.js",
    "test": "npm run test-server && npm run test-client",
    "test-client": "cd ./client/ && CI=1 npm test",
    "test-server": "NODE_ENV=test mocha --compilers js:babel-core/register -u exports server/test/**/*"
  },
  "dependencies": {
    "babel-core": "^6.5.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "bluebird": "^3.4.6",
    "body-parser": "~1.15.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.3.2",
    "express": "~4.14.0",
    "express-session": "^1.10.1",
    "mongoose": "^4.6.8",
    "morgan": "~1.7.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "pretty-error": "^2.0.2",
    "pug": "~2.0.0-beta6",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-typecheck": "^3.6.0",
    "babel-polyfill": "^6.16.0",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "supertest": "^2.0.1"
  },
  "engines": {
    "node": "5.6.0"
  }
}
