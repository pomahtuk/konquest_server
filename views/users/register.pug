extends ../layout

block content
  .container
    .row.flex-items-xs-center
      .col-xs-6.offset-xs-3
        h1 Register Page

        form(role='form', action='/api/users/register', method="post")
          .form-group
              input.form-control(type='text', name='username', placeholder='Enter Username')
          .form-group
            input.form-control(type='password', name='password', placeholder='Password')
          button.btn.btn-primary(type='submit')
            | Submit

          | &nbsp;

          a(href='/')
            button.btn.btn-secondary(type="button") Cancel
